<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/chat_item_border">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_menu_border"
        android:paddingBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:text="运单号："
            android:gravity="left"
            android:paddingLeft="10dp"
            android:textColor="@color/colorGlobal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_order_number"
            android:textSize="15dp"
            android:text="E1750607"
            android:paddingLeft="10dp"
            android:textColor="@color/colorGlobal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_order_get_time"
            android:layout_alignParentRight="true"
            android:text="7月10日 15:30:00"
            android:gravity="right"
            android:textSize="15dp"
            android:textColor="@color/colorGlobal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/order_car_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_order_origin"
            android:textSize="15dp"
            android:text="厦门"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#131313"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:text="—"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#131313"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_order_destination"
            android:textSize="15dp"
            android:text="广州"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#131313"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_order_state"
            android:textColor="@color/colorGlobal"
            android:layout_alignTop="@id/tv_order_origin"
            android:layout_alignParentRight="true"
            android:text="已完成"
            android:gravity="right"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/order_style_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_order_name"
            android:textSize="15dp"
            android:text="果蔬"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#131313"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:text="|"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#131313"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_order_weight"
            android:textSize="15dp"
            android:text="5吨"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#131313"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="|"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="#131313"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_order_volume"
            android:textSize="15dp"
            android:text="5吨"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#131313"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_order_price"
            android:layout_alignParentRight="true"
            android:text="￥3000.00"
            android:gravity="right"
            android:textSize="15dp"
            android:textColor="@color/colorGlobal"/>
    </LinearLayout>
</LinearLayout>