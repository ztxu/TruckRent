    <LinearLayout
        android:id="@+id/layout_username"
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/stroke">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/layout_username"
            android:id="@+id/text_username"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:singleLine="true"
            android:maxLength="16"
            android:hint="请输入用户名"
            android:textColorHint="#ADADAC"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_checkword"
        android:orientation="horizontal"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@+id/layout_username"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@+id/btn_register"
        android:background="@drawable/stroke">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/layout_checkword"
            android:id="@+id/text_checkword"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:singleLine="true"
            android:maxLength="6"
            android:hint="请输入验证码"
            android:textColorHint="#ADADAC"
            />
    </LinearLayout>


    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btn_check"
        android:text="发送验证码"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/lg_login_btn"
        android:layout_alignTop="@+id/layout_checkword"
        android:layout_alignRight="@+id/layout_username"
        android:layout_alignEnd="@+id/layout_username" />

    <LinearLayout
        android:id="@+id/layout_password"
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/layout_checkword"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/stroke"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/layout_username"
            android:id="@+id/text_password"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:background="@null"
            android:layout_weight="1"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:ems="20"
            android:singleLine="true"
            android:maxLength="16"
            android:hint="请输入密码"
            android:textColorHint="#ADADAC"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_repassword"
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/layout_password"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/stroke"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/username_layout"
            android:id="@+id/text_repassword"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:background="@null"
            android:layout_weight="1"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:ems="20"
            android:singleLine="true"
            android:hint="再次输入密码"
            android:maxLength="16"
            android:textColorHint="#ADADAC"
            />
    </LinearLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="注   册"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:id="@+id/btn_register"
        android:layout_below="@+id/layout_repassword"
        android:layout_alignLeft="@+id/layout_password"
        android:layout_marginTop="25dp"
        android:background="@drawable/lg_login_btn"/>

</RelativeLayout>
